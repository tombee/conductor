{
  "comment": "Hardened seccomp profile for Conductor sandboxes",
  "defaultAction": "SCMP_ACT_ERRNO",
  "architectures": [
    "SCMP_ARCH_X86_64",
    "SCMP_ARCH_AARCH64"
  ],
  "syscalls": [
    {
      "comment": "Basic I/O operations",
      "names": [
        "read",
        "write",
        "close",
        "fstat",
        "lseek",
        "pread64",
        "pwrite64"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "File operations (with O_NOFOLLOW check)",
      "names": [
        "openat",
        "openat2"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Stat operations",
      "names": [
        "newfstatat",
        "statx",
        "readlinkat",
        "fstatfs"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Memory allocation (no executable memory)",
      "names": [
        "mmap",
        "munmap",
        "brk",
        "mremap"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Process termination",
      "names": [
        "exit",
        "exit_group"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Time and synchronization",
      "names": [
        "futex",
        "clock_gettime",
        "clock_nanosleep",
        "nanosleep",
        "gettimeofday"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Directory operations",
      "names": [
        "getdents64",
        "getcwd",
        "chdir",
        "fchdir"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Process information",
      "names": [
        "getpid",
        "getppid",
        "getuid",
        "getgid",
        "geteuid",
        "getegid"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Signal handling",
      "names": [
        "rt_sigaction",
        "rt_sigprocmask",
        "rt_sigreturn"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "BLOCKED: Memory protection changes (prevents W^X bypass)",
      "names": [
        "mprotect"
      ],
      "action": "SCMP_ACT_ERRNO",
      "errnoRet": 1
    },
    {
      "comment": "BLOCKED: Process spawning (no subprocess creation)",
      "names": [
        "clone",
        "clone3",
        "fork",
        "vfork",
        "execve",
        "execveat"
      ],
      "action": "SCMP_ACT_ERRNO",
      "errnoRet": 1
    },
    {
      "comment": "BLOCKED: Network access (sandboxed processes have no network)",
      "names": [
        "socket",
        "connect",
        "accept",
        "accept4",
        "bind",
        "listen",
        "sendto",
        "recvfrom",
        "sendmsg",
        "recvmsg",
        "shutdown",
        "getsockname",
        "getpeername",
        "socketpair",
        "setsockopt",
        "getsockopt"
      ],
      "action": "SCMP_ACT_ERRNO",
      "errnoRet": 1
    },
    {
      "comment": "BLOCKED: Debugging (no ptrace)",
      "names": [
        "ptrace",
        "process_vm_readv",
        "process_vm_writev"
      ],
      "action": "SCMP_ACT_ERRNO",
      "errnoRet": 1
    },
    {
      "comment": "BLOCKED: Privilege escalation",
      "names": [
        "setuid",
        "setgid",
        "setreuid",
        "setregid",
        "setresuid",
        "setresgid",
        "setgroups",
        "setfsuid",
        "setfsgid"
      ],
      "action": "SCMP_ACT_ERRNO",
      "errnoRet": 1
    },
    {
      "comment": "BLOCKED: Kernel module operations",
      "names": [
        "init_module",
        "finit_module",
        "delete_module"
      ],
      "action": "SCMP_ACT_ERRNO",
      "errnoRet": 1
    },
    {
      "comment": "BLOCKED: System configuration",
      "names": [
        "reboot",
        "syslog",
        "kexec_load",
        "kexec_file_load"
      ],
      "action": "SCMP_ACT_ERRNO",
      "errnoRet": 1
    }
  ]
}
